@model List<Proje.Models.User>

<div class="admin-container">
    <h2 class="admin-title">Kullanıcıları Yönet</h2>
    <table class="admin-table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Rol</th>
                <th>Oluşturulma Zamanı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>@user.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <form asp-action="DeleteUser" method="post" class="admin-form">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="admin-delete-btn" onclick="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?')">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>